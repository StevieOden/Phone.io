<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/logo"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/opening"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/poppins"
            android:text="Welcome"
            android:textColor="@color/white"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/startjourney"
            android:layout_width="280dp"
            android:layout_height="36dp"
            android:layout_below="@id/welcome"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins"
            android:text="Start your journey here"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/sign_goggle"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/startjourney"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="35dp"
            android:backgroundTint="@color/googlebutt"
            android:text="Sign In With Google"
            android:textColor="@color/black"
            android:textSize="15dp"
            app:cornerRadius="50dp"
            app:icon="@drawable/search"
            app:iconSize="20dp"
            app:iconTint="@color/black" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/sign_in"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/sign_goggle"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="35dp"
            android:text="Sign In"
            android:textColor="@color/white"
            android:textSize="15dp"
            app:cornerRadius="50dp"
            app:strokeColor="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/sign_in"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="75dp"
                android:gravity="center"
                android:text="Donâ€™t have an account?"
                android:textColor="@color/white"
                android:textSize="13dp" />

            <Button
                android:id="@+id/sign_up"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="Sign Up"
                android:textSize="13dp"/>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>